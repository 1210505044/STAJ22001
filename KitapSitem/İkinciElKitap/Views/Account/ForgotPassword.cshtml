@model İkinciElKitap.Models.Uyeler

@{
    Layout = null;
    ViewBag.Title = "Şifremi Unuttum";
}
<link href="~/eshop/css/bootstrap.min.css" rel="stylesheet" />
<form action="@Url.Action("ForgotPassword", "Account")" method="POST" id="kullanici_form">
    <div class="form-group">
        <label for="KullaniciAdi">Kullanıcı Adınızı Giriniz</label>
        <input type="text" name="KullaniciAdi" id="KullaniciAdi" placeholder="Lütfen Kullanıcı Adınızı Giriniz" required>
    </div>
    <div class="form-group">
        <label for="Email">E-posta Adresinizi Giriniz:</label>
        <input id="Email" type="email" name="Email" placeholder="Eposta Adresinizi Giriniz" required>
    </div>
    <div class="form-group">
        <label for="Sifre">Yeni Şifre:</label>
        <input type="password" id="Sifre" name="Sifre" placeholder="Yeni Şifre Giriniz" required />
    </div>
    <button type="submit" class="button button-primary full-width space-top" id="kullanici_kaydet">Şifremi Güncelle</button>
</form>
