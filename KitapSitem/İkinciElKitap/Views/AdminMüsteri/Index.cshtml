@using İkinciElKitap.Models

@{
    ViewBag.Title = "Index";
}

<h2>Müşteri Detayları</h2>

<div>

    <a class="btn btn-success rounded-2" href="/AdminMüsteri/Ekle">Müsteri Ekle</a>

</div>


<div>
    <table class="table table-hover">
        <tr>
            <th>Alıcı Adı</th>
            <th> Alıcı SoyAdı</th>
            <th>Kullanıcı Adı</th>
            <th>E-mail</th>
            <th>Sifre</th>







            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        <tbody>
            @foreach (Alici k in Model)
            {
                <tr>
                    <td> @k.Uyeler.UyeAd</td>
                    <td> @k.Uyeler.UyeSoyad</td>
                    <td> @k.Uyeler.KullaniciAdi</td>
                    <td> @k.Uyeler.Email</td>
                    <td>@k.Uyeler.Sifre</td>
                   



                    <td> <a class="btn btn-danger ktSil" data-ktId="@k.AliciID" href="#">Sil</a> </td>
                    <td> <a href="@Url.Action("Ekle", "AdminMüsteri", new { id = k.AliciID })" class="btn btn-info">Güncelle</a></td>

                </tr>
            }

        </tbody>
    </table>

</div>

@section scripts{
    <script src="~/NiceAdmin/js/jquery-1.11.1.js"></script>

    <script>
        $(".ktSil").click(
            function () {

                var sonuc = confirm("Müşteri Silinsin Mi?")
                if (sonuc) {
                    var ktId = $(this).attr("data-ktId")
                    //alert("ID=" + ktId);
                    $.ajax(
                        {

                            type: "POST",
                            url: "/AdminMüsteri/Sil/" + ktId,
                            success: function () {
                                alert("Müşteri silindi");
                                window.Location.replace("/AdminMüsteri/Index");

                            },


                            error: function () {
                                alert("Hata oluştu");
                            }
                        }

                    );

                }
                else {
                    alert("işlem ipal edildi");

                }
            }



        );

    </script>
}