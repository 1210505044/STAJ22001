@model İkinciElKitap.Models.KitapDetayViewModel

@{
    ViewBag.Title = "KitapDetay";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="product-details">
                <div class="col-sm-5">
                    <div class="view-product">
                        <img class="product-image-wrapper " width="100" height="350" src="~/eshop/images/@Model.ResimURL" alt="@Model.KitapAd" />
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="product-information">
                        <h2>@Model.KitapAd</h2>

                        <p>Sayfa Sayısı: @Model.SayfaSayisi</p>
                        <p>Yazar: @Model.YazarAd</p>
                        <p>Yayınevi: @Model.YayineviAd</p>
                        <p>Kategori: @Model.KategoriAd</p>
                        <span>
                            <span>@Model.Fiyat.ToString("C")</span>
                        </span>
                        <form id="sepetForm" method="post" action="@Url.Action("SepeteEkle", "Sepet")">
                            <input type="hidden" name="kitapID" value="@Model.KitapID" />
                            <button type="submit" class="btn btn-default add-to-cart">
                                <i class="fa fa-shopping-cart"></i> Sepete Ekle
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>