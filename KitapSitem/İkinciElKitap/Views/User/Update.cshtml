@model İkinciElKitap.Models.Uyeler
@{
    Layout = null;
}
<link href="~/eshop/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br />
        <div class="form-group">
            <label>Ad</label>
            <input type="text" class="form-control" name="UyeAd" value="@Model.UyeAd" />


        </div>
        <div class="form-group">
            <label>Soyad</label>
            <input type="text" class="form-control" name="UyeSoyad" value="@Model.UyeSoyad" />


        </div>
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <input type="text" class="form-control" name="KullaniciAdi" value="@Model.KullaniciAdi" />


        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="Email" value="@Model.Email" />


        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" class="form-control" name="Sifre" value="@Model.Sifre" />


        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>





    </div>


</form>

